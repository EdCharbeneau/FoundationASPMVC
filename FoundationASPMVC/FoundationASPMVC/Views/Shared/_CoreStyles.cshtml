@using FoundationASPMVC.App_Start

@*To add a new style sheet see Bundles_Startup.cssPaths*@

@* Styles will be bundled and minified when in release mode *@
@if (HttpContext.Current.IsDebuggingEnabled)
{
    //Combine and Compress These CSS Files 
    foreach (var path in BundleConfig.cssPaths)
    {
    <link rel="stylesheet" href="@Url.Content(@path)" type="text/css" />
    }
}
else
{
    //Generated by Bundles_Startup.cs
    <link href="@Url.Content("~/Content/core/min.css")" rel="stylesheet" type="text/css" />
}
