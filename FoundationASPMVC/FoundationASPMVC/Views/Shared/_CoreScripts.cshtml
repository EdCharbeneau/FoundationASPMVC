@using FoundationASPMVC.App_Start

@*To add a new javascript see Bundles_Startup.scriptPaths*@

@* Scripts here will be bundled and minified when in release mode *@
@if (HttpContext.Current.IsDebuggingEnabled)
{
    //Combine and Compress These JS Files
    foreach (var path in BundleConfig.scriptPaths)
    {
    <script src="@Url.Content(@path)"></script>        
    }
}
else
{
    //Generated by Bundles_Startup.cs
    <script src="@Url.Content("~/Scripts/core/min.js")" type="text/javascript"></script>
}