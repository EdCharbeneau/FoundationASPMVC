<head>
    <meta charset="utf-8" />
    @*Set the viewport width to device width for mobile *@
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>@* Included CSS Files *@
    @Html.Partial("_CoreStyles")
    <link rel="stylesheet" href="@Url.Content("~/Content/app.css")">
    <!--[if lt IE 9]>
		<link rel="stylesheet" href="@Url.Content("~/Content/ie.css")">
	<![endif]-->
    <script src="@Url.Content("~/Scripts/core/modernizr.foundation.js")"></script>
    <!-- IE Fix for HTML5 Tags -->
    <!--[if lt IE 9]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
    @*Use the Head section to define page specific head items *@
    @RenderSection("Head", false)
</head>
<body>
    @RenderBody()

    @* Scripts to be minified *@
    @Html.Partial("_CoreScripts")

    @* Application specific javascript code and hooks. Move to _CoreScripts in final release. *@
    <script src="@Url.Content("~/Scripts/app.js")"></script>
    
    @*Use the Scripts section to define page specific scripts*@
    @RenderSection("Scripts", false)
</body>
</html>
